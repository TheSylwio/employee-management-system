{% extends 'base.html.twig' %}

{% block title %}Zadania{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <table class="table table-striped table-dark">
                <tr>
                    <th scope="col">Pracownik</th>
                    <th scope="col">Data wystawienia</th>
                    <th scope="col">Termin realizacji</th>
                    <th scope="col">Opis</th>
                    <th scope="col">Status zadania</th>
                </tr>
                {% for tasks in tasks %}
                    <tr>
                        <td>{{ tasks.employee }}</td>
                        <td>{{ tasks.creationDate|date('d.m.Y H:i') }}</td>
                        <td>{{ tasks.deadline |date('d.m.Y H:i') }}</td>
                        <td>{{ tasks.description }}</td>
                        <td>{{ tasks.status }}</td>
                    </tr>
                {% endfor %}
            </table>
            <a href="{{ path('tasks_add') }}" class="btn btn-primary">Dodaj zadanie</a>
        </div>
    </div>
{% endblock %}
